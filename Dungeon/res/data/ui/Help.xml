<?xml version="1.0" encoding="UTF-8"?>

<UI>
    <Help name="Help" in-time="250" out-time="250">
        <Widgets>
            <!-- Background -->
            <Static name="bg" layer="-10" float="true" pos="0% 0%">
                <Drawer>
                    <Image src="sky"></Image>
                </Drawer>
            </Static>
            <Static name="cloud-1" float="true" pos="40% 25%" layer="-5">
                <Drawer>
                    <Image width="256" height="128" focus="128 64" src="cloud-1" size="128 64"></Image>
                </Drawer>
                <Transitions>
                    <CoordTransition duration="9000" delay="0" loop="false" reverse="false" style="linear" float="true" begin="40% 25%" end="120% 25%"></CoordTransition>
                    <CoordTransition duration="18000" delay="9000" loop="true" reverse="false" style="linear" float="true" begin="-20% 25%" end="120% 25%"></CoordTransition>
                    <ScaleTransition duration="14000" delay="0" loop="true" reverse="true" style="linear" begin="1.0" end="1.3"></ScaleTransition>
                    <AlphaTransition duration="8000" delay="0" loop="true" reverse="true" style="linear" begin="255" end="200"></AlphaTransition>
                </Transitions>
            </Static>
            <Static name="cloud-2" float="true" pos="20% 50%" layer="-5">
                <Drawer>
                    <Image width="256" height="128" focus="128 64" src="cloud-2" size="128 64"></Image>
                </Drawer>
                <Transitions>
                    <CoordTransition duration="18000" delay="0" loop="false" reverse="false" style="linear" float="true" begin="20% 50%" end="120% 50%"></CoordTransition>
                    <CoordTransition duration="20000" delay="18000" loop="true" reverse="false" style="linear" float="true" begin="-20% 50%" end="120% 50%"></CoordTransition>
                    <ScaleTransition duration="11000" delay="0" loop="true" reverse="true" style="linear" begin="1.0" end="1.1"></ScaleTransition>
                    <AlphaTransition duration="9000" delay="0" loop="true" reverse="true" style="linear" begin="255" end="200"></AlphaTransition>
                </Transitions>
            </Static>
            <Static name="cloud-3" float="true" top="false" pos="70% 25%" layer="-5">
                <Drawer>
                    <Image width="256" height="128" focus="128 64" src="cloud-3" size="128 64"></Image>
                </Drawer>
                <Transitions>
                    <CoordTransition duration="5000" delay="0" loop="false" reverse="false" style="linear" float="true" top="false" begin="70% 25%" end="120% 25%"></CoordTransition>
                    <CoordTransition duration="21000" delay="5000" loop="true" reverse="false" style="linear" float="true" top="false" begin="-20% 25%" end="120% 25%"></CoordTransition>
                    <ScaleTransition duration="7000" delay="0" loop="true" reverse="true" style="linear" begin="1.0" end="1.2"></ScaleTransition>
                    <AlphaTransition duration="1100" delay="0" loop="true" reverse="true" style="linear" begin="255" end="200"></AlphaTransition>
                </Transitions>
            </Static>
            <Static name="star-1" float="true" pos="20% 50%" layer="-10">
                <Drawer>
                    <Image width="64" height="64" focus="32 32" src="star" size="64 64"></Image>
                </Drawer>
                <Transitions>
                    <ScaleTransition duration="2200" delay="0" loop="true" reverse="true" style="ease-out" begin="1.0" end="0.8"></ScaleTransition>
                    <AlphaTransition duration="2200" delay="0" loop="true" reverse="true" style="linear" begin="255" end="128"></AlphaTransition>
                </Transitions>
            </Static>
            <Static name="star-2" float="true" pos="80% 40%" layer="-10">
                <Drawer>
                    <Image width="48" height="48" focus="24 24" src="star" size="64 64"></Image>
                </Drawer>
                <Transitions>
                    <ScaleTransition duration="1700" delay="0" loop="true" reverse="true" style="ease-out" begin="1.0" end="0.8"></ScaleTransition>
                    <AlphaTransition duration="1700" delay="0" loop="true" reverse="true" style="linear" begin="255" end="128"></AlphaTransition>
                </Transitions>
            </Static>
             <Static name="star-3" float="true" pos="70% 85%" layer="-10">
                <Drawer>
                    <Image width="32" height="32" focus="16 16" src="star" size="64 64"></Image>
                </Drawer>
                <Transitions>
                    <ScaleTransition duration="1300" delay="123" loop="true" reverse="true" style="ease-out" begin="1.0" end="0.8"></ScaleTransition>
                    <AlphaTransition duration="1300" delay="123" loop="true" reverse="true" style="linear" begin="255" end="128"></AlphaTransition>
                </Transitions>
            </Static>
            <!-- Back button -->
            <Button name="back" pos="10 403">
                <Up>
                    <Image width="128" height="64" origin="0 128" size="128 64" src="widget"></Image>
                </Up>
                <Hover>
                    <Image width="128" height="64" origin="128 128" size="128 64" src="widget"></Image>
                </Hover>
                <Down>
                    <Image width="128" height="64" origin="256 128" size="128 64" src="widget"></Image>
                </Down>
                <Trigger>
                    <Trigger type="mask" vkey="0x1B" width="128" height="64" origin="384 128" size="128 64" src="widget"></Trigger>
                </Trigger>
                <HoverSound>
                    <Buzzer src="hover"></Buzzer>
                </HoverSound>
                <ClickSound>
                    <Buzzer src="click"></Buzzer>
                </ClickSound>
            </Button>
            <!-- Title -->
            <Static name="help" pos="0 0" layer="5">
                <Drawer>
                    <Image width="640" height="480" src="help" size="640 480"></Image>
                </Drawer>
            </Static>
        </Widgets>
    </Help>
</UI>
